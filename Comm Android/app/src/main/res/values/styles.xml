<resources>

    <!--
        Base application theme, now using AppCompat for all API levels.
    -->
    <style name="AppBaseTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="android:windowBackground">@color/background_light</item>
    </style>

    <!-- Help text styles -->
    <style name="HelpTitleStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_color</item>
    </style>

    <style name="HelpSectionTitleStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_color</item>
    </style>

    <style name="HelpTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!-- Help section text styles -->
    <style name="HelpSectionTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="HelpSectionContent">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

</resources>
